<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/webtoon_thumnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="-6dp" >
        <TextView
            android:id="@+id/webtoon_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="title"></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/webtoon_writers"
            android:text="writers"
            android:layout_marginLeft="50dp"></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="webtoon_description"
            android:id="@+id/webtoon_description"
            android:layout_marginLeft="50dp"></TextView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>